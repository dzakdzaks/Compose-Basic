<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComposeBasic" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy</item>
        <item name="colorOnPrimary">@color/chartreuse</item>
        <item name="colorPrimaryDark">@color/navy</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/navy</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/haiti</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ComposeBasic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/haiti</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposeBasic</item>
    </style>
</resources>